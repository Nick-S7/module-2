<div>
    <h2>{{character.name}} Info</h2>
    <h3>Occupation: {{character.occupation}}</h3>
    <h3>Weapon: {{character.weapon}}</h3>
</div>

<hr />
<div>
    <h3 id="update-char">Update form</h3>
    <form action="" method="POST" id="update-character-form">
        <input class="hide" type="number" name="theId" id="char-id" value="{{character.id}}">
        <div class="form-group">
            <label for="update-name-input"> Name: </label>
            <input type="text" name="name" id="update-name-input" class="form-control" value="{{character.name}}" />
        </div>
        <div class="form-group">
            <label for="update-occupation-input"> Occupation: </label>
            <input type="text" name="occupation" id="update-occupation-input" class="form-control"
                value="{{character.occupation}}" />
        </div>
        <div class="form-group">
            <label for="update-weapon-input"> Weapon: </label>
            <input type="text" name="weapon" id="update-weapon-input" class="form-control"
                value="{{character.weapon}}" />
        </div>

        <button type="submit" class="btn btn-primary">Save changes</button>
    </form>
</div>