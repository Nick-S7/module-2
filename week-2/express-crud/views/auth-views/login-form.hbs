<h2>Login</h2>
<form action="/auth/login" method="POST">

    <label>
        Email
        <input type="email" name="email" placeholder="Your email" />
    </label>

    <label>
        Password
        <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

    {{!-- error message will be added here --}}
    {{#if errorMessage}}
        <p> {{errorMessage}}</p>
    {{/if}}
</form>